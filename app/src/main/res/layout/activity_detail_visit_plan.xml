<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/colorPrimary"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.trikarya.growth.DetailVisitPlan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <TextView
            android:id="@+id/vp_nama"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:background="@color/softred"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:text="Nama :"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/vp_alamat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:background="@color/softred"
            android:gravity="center_vertical"
            android:text="Alamat :"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/vp_rank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:background="@color/softred"
            android:gravity="center_vertical"
            android:text="Ranking :"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/vp_telp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:background="@color/softred"
            android:gravity="center_vertical"
            android:text="Telepon :"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/vp_kota"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:background="@color/softred"
            android:gravity="center_vertical"
            android:text="Kota :"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/vp_tipe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:background="@color/softred"
            android:gravity="center_vertical"
            android:text="Tipe :"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/vp_tgl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:text="Tanggal Visit :"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
</RelativeLayout>
