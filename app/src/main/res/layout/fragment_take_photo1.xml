<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.TakePhoto1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/et_height_medium"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/tp_takephoto"
                    android:clickable="true"
                    android:layout_width="@dimen/iv_size_takePhoto"
                    android:layout_height="@dimen/iv_size_takePhoto"
                    android:src="@mipmap/camera"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dashboard_padding"
                    android:text="@string/date"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/tp_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/et_padding_horizontal"
                    android:background="@drawable/shape_gray"
                    android:editable="false"
                    android:hint="pick a date..."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/outletName"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="@dimen/dashboard_padding"/>
                <Spinner
                    android:id="@+id/tp_outletname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"></Spinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photoTitle"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="@dimen/dashboard_padding"/>
                <EditText
                    android:id="@+id/tp_phototitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"
                    android:background="@drawable/shape_white"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipe Photo"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="@dimen/dashboard_padding"/>
                <Spinner
                    android:id="@+id/tp_tipe"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"></Spinner>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/tp_s1_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@color/green"
            android:layout_alignParentBottom="true"
            android:text="@string/next"/>
    </RelativeLayout>
</FrameLayout>
