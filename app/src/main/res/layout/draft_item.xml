<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/draft_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/et_padding_horizontal"
    android:clickable="true">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">
        <ImageView
            android:id="@+id/dr_foto"
            android:layout_width="@dimen/icon_listview_size"
            android:layout_height="@dimen/icon_listview_size"
            android:src="@drawable/submit_visit"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6">
        <TextView
            android:id="@+id/dr_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto Contoh"
            android:textSize="@dimen/footer_tv_size"/>
        <TextView
            android:id="@+id/dr_nama_OutOrCom"
            android:layout_width="wrap_content"
            android:maxLines="2"
            android:layout_height="wrap_content"
            android:text="Submit Visit Plan"
            android:textSize="@dimen/footer_tv_size"/>
        <TextView
            android:id="@+id/dr_tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textSize="@dimen/footer_tv_size"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/dr_delete"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_gravity="right"/>
</LinearLayout>