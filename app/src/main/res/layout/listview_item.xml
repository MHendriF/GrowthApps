<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:background="@drawable/border_set_all"
    android:padding="@dimen/et_padding_horizontal"
    android:clickable="true">
    <TextView
        android:id="@+id/namaOutlet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="Toko Contoh"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:textSize="@dimen/footer_tv_size"
        android:layout_weight="5"
        android:layout_marginRight="@dimen/list_margin"/>
    <TextView
        android:id="@+id/tipeOutlet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipe Outlet"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/outlet_list_small"
        android:singleLine="true"
        android:layout_weight="2"
        android:layout_marginRight="@dimen/list_margin"
       />
    <TextView
        android:id="@+id/rankOutlet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A"
        android:textStyle="bold"
        android:textSize="@dimen/footer_tv_size"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:layout_weight="1"
        android:background="@drawable/button_rounded_red"
        android:layout_marginRight="@dimen/list_margin"
        android:gravity="center"/>
    <TextView
        android:id="@+id/alamatOutlet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jalan Gubeng Kertajaya"
        android:textSize="@dimen/outlet_list_small"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/holo_green_dark"
        android:layout_weight="5"/>
</LinearLayout>