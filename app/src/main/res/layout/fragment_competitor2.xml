<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.Competitor2">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photoTitle"
            android:textColor="@android:color/black"
            android:layout_marginBottom="@dimen/dashboard_padding"/>
        <EditText
            android:id="@+id/com_phototitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:paddingLeft="@dimen/et_padding_horizontal"
            android:background="@drawable/shape_white"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipe Photo"
            android:textColor="@android:color/black"
            android:layout_marginBottom="@dimen/dashboard_padding"/>
        <Spinner
            android:id="@+id/com_tipe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="@dimen/activity_vertical_margin"></Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/note"
            android:textColor="@android:color/black"
            android:layout_marginBottom="@dimen/dashboard_padding"/>
        <EditText
            android:id="@+id/com_note"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height_medium"
            android:background="@drawable/shape_white"
            android:hint="input here.."
            android:gravity="top"
            android:padding="@dimen/et_padding"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        <Button
            android:id="@+id/com_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height_medium"
            android:background="@drawable/shape_brown"
            android:layout_marginTop="@dimen/bt_margin_vertical"
            android:drawableLeft="@mipmap/panah"
            android:text="@string/submit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/et_textsize"
            android:drawablePadding="@dimen/bt_drawable_padding_big"
            android:paddingLeft="@dimen/bt_padding_horizontal_big"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/com_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height_medium"
            android:background="@drawable/shape_orange"
            android:layout_marginTop="@dimen/bt_margin_vertical"
            android:drawableLeft="@mipmap/save"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="@dimen/et_textsize"
            android:drawablePadding="@dimen/bt_drawable_padding_big"
            android:paddingLeft="@dimen/bt_padding_horizontal_big"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</FrameLayout>
